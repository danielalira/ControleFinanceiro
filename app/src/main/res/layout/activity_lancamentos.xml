<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.senaijandira.controlefinanceiro.lancamentosActivity"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#B0C4DE"
        android:orientation="vertical"

        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:text="Saldo Geral"
            android:textColor="	#006400"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_marginTop="20dp"


            />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" R$ 250,00"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="sans"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFF">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Valores Receitas"
            android:textColor="#000"
            android:textSize="28dp"
            android:typeface="sans"
            android:textStyle="bold"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Salario"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/txt_valor_salario"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Investimento"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="R$ 20,00"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/txt_valor_investimento"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Poupança"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="R$ 20,00"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/txt_valor_poupanca"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Aluguel"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="R$ 20,00"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/txt_valor_aluguel"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical"
        android:layout_marginTop="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Valores Despesas"
            android:textColor="#000"
            android:textSize="28dp"
            android:typeface="sans"
            android:textStyle="bold"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lazer"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/txt_valor_lazer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="R$ 20,00"
            android:layout_weight="1"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Transporte"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/txt_valor_transporte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="R$ 20,00"
            android:layout_weight="1"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saúde"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/txt_valor_saude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="R$ 20,00"
            android:layout_weight="1"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Moradia"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/txt_valor_moradia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="R$ 20,00"
            android:layout_weight="1"
            android:textSize="20dp"
            />
    </LinearLayout>


</LinearLayout>
